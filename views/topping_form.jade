extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#title.form-control(type='text', placeholder='Topping Name' name='name' required='true' value=(undefined===topping ? '' : topping.name) )
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(type='textarea', placeholder='Topping description' name='description' required='true') #{undefined===topping ? '' : topping.description}
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='text', placeholder='3.99' name='price' value=(undefined===topping ? '' : topping.price) required='true')
    div.form-group
      label Category:
      div
        for category in categories
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='category', id=category._id, value=category._id, checked=category.checked )
            label(for=category._id) #{category.category_name}
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
